<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EBF8"
    android:padding="16dp">

    <TextView
        android:id="@+id/quizTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="UBCV Chapter Quiz"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/quizRecap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Ready to take the quiz again?"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:textAlignment="center"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Highscore: 0"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:background="@drawable/round"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/text_view_highscore"
        android:layout_marginBottom="10dp"
        android:text="Start Quiz" />

    <Button
        android:id="@+id/button_start_quiz_again"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:background="@drawable/round"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_view_highscore"
        android:text="Try Again"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/gotoChaptersBtn"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:background="@drawable/round"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_start_quiz"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="Back to the Lesson" />

    <Button
        android:id="@+id/gotoChaptersBtnTwo"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:background="@drawable/round"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_start_quiz_again"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Back to the Lesson" />

    <!--<Spinner
        android:id="@+id/spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_start_quiz"
        android:layout_below="@+id/button_start_quiz"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_start_quiz"
        android:layout_below="@+id/spinner_category"
        android:layout_marginTop="16dp" />-->

</RelativeLayout>